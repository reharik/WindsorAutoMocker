@model KnowYourTurf.Web.Models.POListViewModel
@using HtmlTags;
@using KnowYourTurf.Web
@using KnowYourTurf.Core.Html.FubuUI


@{ Layout = "~/Views/Shared/_EmptyLayout.cshtml"; }

    <div class="col left">
        <div class="fieldRow">
        @Html.ViewFor(x => x.EntityId).LabelDisplay(WebLocalizationKeys.PO_NUMBER).RootId("viewPOID").ToHtmlTag()
        </div>
        <div class="fieldRow">
        @Html.ViewFor(x => x.VendorCompany).RootId("viewVendor").ToHtmlTag()
        </div>
        <div class="fieldRow">
        @Html.SubmissionFor(x => x.VendorEntityId).InputId("vendor").RootId("editVendor").ToHtmlTag()
        </div>
    </div>

    <div class="col full clear">
        <div class="fieldRow">
            <div id="productGridArea">
            </div>
        </div>
    </div>

    <div class="col full clear">
        <div class="fieldRow">
            <div id="poliGridArea">
            </div>
        </div>
    </div>
    <div class="footer">

        @StandardButtonFor("commit", WebLocalizationKeys.COMMIT).AddClass("save").ToHtmlTag()
        @StandardButtonFor("return", WebLocalizationKeys.RETURN).AddClass("cancel").ToHtmlTag()
    </div>
