@model KnowYourTurf.Web.Models.DisplayTaskViewModel
@using KnowYourTurf.Core
@using KnowYourTurf.Web
@using KnowYourTurf.Core.Html.FubuUI

@{
    Layout = Model.Popup ? "~/Views/Shared/_popupLayout.cshtml" : "~/Views/Shared/_DisplayLayout.cshtml";
}

<div id="taskDisplay"> 
    <div class="col left">
        <div class="fieldRow">
               @Html.ViewFor(x => x.TaskTypeName).ToHtmlTag()
        </div>
        <div class="fieldRow">
                    @Html.ViewFor(x => x.ScheduledDate).LabelDisplay(WebLocalizationKeys.DATE).ToHtmlTag()
        </div>
        <div class="fieldRow">
                    @Html.ViewFor(x => x.FieldName).LabelDisplay(WebLocalizationKeys.FIELD_NAME).ToHtmlTag()
        </div>
        <div class="fieldRow">
                    @Html.ViewFor(x => x.InventoryProductProductName).ToHtmlTag()
        </div>
        <div class="fieldRow">
                    @Html.ViewFor(x => x._EquipmentNames).LabelDisplay(WebLocalizationKeys.EQUIPMENT).ToHtmlTag()
        </div>
        <div class="fieldRow">
                    @Html.ViewFor(x => x._EmployeeNames).LabelDisplay(WebLocalizationKeys.EMPLOYEES).ToHtmlTag()
        </div>
        <div class="fieldRow">
                    @Html.ViewFor(x => x.Notes).ToHtmlTag()
        </div>
    </div>
</div>

